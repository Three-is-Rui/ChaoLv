.container {
  padding: 20rpx;
  background-color: #FFF0F5;
  min-height: 100vh;
}

.stats-container {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  background:rgb(253, 209, 216);
  border-radius: 20rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 105, 180, 0.2);
}

.stat-box {
  text-align: center;
  padding: 20rpx;
  flex: 1;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #FF69B4;
  display: block;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #FF69B4;
}

.reminder {
  background: #FFE4E1;
  padding: 30rpx;
  border-radius: 20rpx;
  margin: 20rpx;
  display: flex;
  align-items: center;
  border-left: 8rpx solid #FF69B4;
}

.reminder-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.reminder-content {
  flex: 1;
}

.reminder-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF69B4;
  display: block;
  margin-bottom: 10rpx;
}

.reminder-text {
  font-size: 28rpx;
  color: #FF69B4;
}

.form-container {
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 105, 180, 0.1);
}

.form-title {
  text-align: center;
  font-size: 36rpx;
  color: #FF69B4;
  margin-bottom: 30rpx;
  font-weight: bold;
}

.input-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.input-box {
  flex: 1;
  min-width: 300rpx;
}

.input-label {
  display: block;
  margin-bottom: 15rpx;
  color: #FF69B4;
  font-size: 28rpx;
  font-weight: 500;
}

.picker {
  width: 90%;
  padding: 25rpx;
  border: 2rpx solid #FFB6C1;
  border-radius: 15rpx;
  font-size: 28rpx;
  color: #FFB6C1;
}

.save-btn {
  background: linear-gradient(to right, #FF69B4, #FFB6C1);
  color: white;
  border: none;
  padding: 25rpx;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 20rpx;
}

.timeline-container {
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 105, 180, 0.1);
}

.timeline-title {
  text-align: center;
  font-size: 36rpx;
  color: #FF69B4;
  margin-bottom: 30rpx;
  font-weight: bold;
}

.timeline {
  max-height: 600rpx;
  padding: 20rpx 0;
}

.timeline-item {
  position: relative;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: #FFF0F5;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(255, 182, 193, 0.3);
}

.timeline-item::before {
  content: '';
  position: absolute;
  top: 40rpx;
  left: -20rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #FF69B4;
  border: 4rpx solid white;
}

.period-date {
  font-weight: bold;
  color: #FF69B4;
  margin-bottom: 15rpx;
  font-size: 32rpx;
}

.period-duration {
  color: #FF69B4;
  font-size: 28rpx;
}

.cycle-length {
  background: #FFB6C1;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  display: inline-block;
  margin-top: 15rpx;
  color: white;
}