.container {
  padding: 150rpx;
  display: flex;
  flex-direction: column;
}

.slider-section {
  margin-bottom: 40rpx;
  padding: 20rpx;
  background-color: #FFF0F5;
  border-radius: 10rpx;
  
}

.generate-section {
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
  background-color: #FF69B4; /* 粉色背景 */
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 18rpx;
  font-weight: 500;
  width: 200%;
}

.result-section {
  padding: 30rpx;
  background-color: #FFF0F5;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sport-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #FF69B4;
  margin: 20rpx 0;
}

.sport-duration, .sport-description {
  font-size: 32rpx;
  margin-bottom: 15rpx;
  white-space: normal; /* 覆盖 nowrap，允许自动换行 */
  overflow: visible; /* 覆盖 hidden，允许内容完全显示 */
  text-overflow: clip; /* 可省略，或覆盖 ellipsis */
  width: 100%;
  word-wrap: break-word; /* 确保长单词或URL也能换行 */
}
